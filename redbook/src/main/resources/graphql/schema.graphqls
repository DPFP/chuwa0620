type Post {
    id:ID
    title:String
    description:String
    content:String
}

type Author {
    id:ID
    name:String
    gender:Int
    age:Int
}

type Query {
    findPostById(id:ID): Post
    findAuthorById(id:ID): Author
}

type Mutation {
    createPost(title:String!, description:String!, content:String!) : Post!
    createAuthor(name:String!, gender:Int!, age:Int) : Author!
}