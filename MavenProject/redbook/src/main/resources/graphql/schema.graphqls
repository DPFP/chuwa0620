type Post {
    id: ID
    title: String
    description: String
    content: String
}

type Author {
    id: ID
    firstName: String
    lastName: String
    brithDate: String
}

type Query {
    postById(id: ID): Post
    authorById(id: ID): Author
}

type Mutation {
    createPost(title:String!, description:String!, content:String!) : Post!
    createAuthor(firstName:String!, lastName:String!, birthDate:String!) : Author!
    deleteAuthor(id: ID): Author!
}


